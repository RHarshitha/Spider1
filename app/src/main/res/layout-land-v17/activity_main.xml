<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sairajesh.spider1.MainActivity"
    android:id="@+id/Lay">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/cap"
        android:src="@drawable/ca"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:contentDescription="@string/captain" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/ironman"
        android:src="@drawable/ir"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/ironman" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/which_team_are_you_on"
        android:id="@+id/TV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="26sp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Iron"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TV"
        android:layout_alignStart="@+id/TV"
        android:textColor="#f1020e"
        android:textSize="22sp"
        android:textAlignment="gravity"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Cap"
        android:textColor="#3850ed"
        android:textSize="25sp"
        android:layout_above="@+id/Iron"
        android:layout_toRightOf="@+id/ironman"
        android:layout_toEndOf="@+id/ironman"
        android:gravity="center_vertical"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tap_to_vote"
        android:id="@+id/textView"
        android:layout_below="@+id/TV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hold_to_punch"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/Cap"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
